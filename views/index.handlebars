
<div class="container">    
    <div class="row">
        <div class="col-4">
            <h2>Burgers to Eat!</h2>
            <div class="card-body">
                <div class="row" class="burgers">
                    <div id="left" class="col lists">
                        <ul>
                            {{#each burgers}}
                            {{#unless devoured}}
                            {{> burger-block devoured=false}}
                            {{/unless}}
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <h2>Devoured Burgers!</h2>
            <div class="card-body">
                <div class="row" class="burgers">
                    <div id="right" class="col lists">
                        <ul>
                            {{#each burgers}}
                            {{#if devoured}}
                            {{> burger-block devoured=true}}
                            {{/if}}
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-4">
            <h2>Add a Burger</h2>
            <form class="create-form" class="row">

                <div class="form-group">
                    <input type="text" id="newBurg" placeholder="Enter your burger">
                </div>

                <button type="submit" id="submitBtn" class="btn btn-primary btn-sm">Add Burger</button>
            </form>
        </div>
    </div>
</div>
</div>
</div>