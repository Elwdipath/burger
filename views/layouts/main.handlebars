<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
		<title>Eat the Burger!</title>
		<script src="https://code.jquery.com/jquery.js"></script>
		<link rel="stylesheet" href="/assets/css/burger_style.css" type="text/css" />
	</head>
	<body>
		{{{ body }}}
        <script type="text/javascript">
            	var currentURL = window.location.origin;
		$("#submitBtn").click(function (event) {
			event.preventDefault();
			var name = $("#newBurg").val().trim();
			var burgName = {
				name: name
			}
			$.post(currentURL + "/api/burgers", burgName)
				.then(function (response) {
					console.log(response);
					location.reload();
				});
		});
		$(".change-condition").click(function () {
			var id = $(this).data('id');
			var devoured = {devoured:1}
			$.ajax("/api/burgers/" + id,  {
				type: "PUT",
				data: devoured
			}).then(function (response) {
					console.log(response);
					location.reload();
				});
		});
        
        </script>
	</body>
</html>